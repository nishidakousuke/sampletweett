<%= form_tag("/tweets/#{@tweet.id}", method: :patch) do %>

<div class="review8">

<div class="review7">

<div class="lets-review">
<h3 class="review">編集</h3>
</div>

<div class="cp_iptxt">
<input placeholder="Image Url" type="text" name="image" value="<%= @tweet.image %>" autofocus="true">
<i class="fa fa-user fa-lg fa-fw" aria-hidden="true"></i>
</div>


<div class="cp_iptxt">
<input placeholder="一言だけ" type="text" name="text"  value="<%= @tweet.text %>" autofocus="true">
<i class="fa fa-user fa-lg fa-fw" aria-hidden="true"></i>
</div>

<div class="submit-box">
<input type="submit" value="更新する" class="button">
</div>
</div>
<% end %>
</div>

