<div class="contents-row">
<h2 class="new-review">新規登録しますか？</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'email' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'email-field' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'email' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'email-field' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'email' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'email-field' %>
  </div>

  <div class="action">
    <%= f.submit "Sign up", class: 'actions' %>
  </div>
<% end %>

<div class="action">
<%= render "devise/shared/links" %>
</div>
</div>
