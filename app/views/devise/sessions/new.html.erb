<div class="contents-row">
<h2 class="new-review">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'email' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'email-field' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'email' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'email-field' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="action">
    <%= f.submit "Log in", class: 'actions' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
